{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowJs": true,
    "declaration": true,
    "rootDir": "./src/",
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "removeComments": true,
    "composite": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./src/**/__tests__",
    "./test/**/*",
    "./examples/**/*",
    "./vitest.config.js",
    "./dist"
  ]
}
